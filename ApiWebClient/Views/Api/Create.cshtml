@model Book_Authors
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Create";
}
<div class="card mx-auto text-center" style="padding:20px; border-radius:20px;max-width:500px; align-content:center; margin:auto">
    <h4 class=" display-5 fw-bold text-body-emphasis rounded text-center  p-3">Add new Book</h4>
    <form method="POST" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Book.Title" class="control-label"></label>
            <input asp-for="Book.Title" class="form-control" />
            <span asp-validation-for="Book.Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Book.Description" class="control-label"></label>
            <input asp-for="Book.Description" class="form-control" />
            <span asp-validation-for="Book.Description" class="text-danger"></span>
        </div>
        <select id="authorId" class="form-select" style="border-radius:20px" asp-for="Id">
            <option value="">Select an author</option>
            @foreach(var item in Model.authors)
            {
                <option value="@item.Id">@item.Name @item.Surname</option>
            }
        </select>
        <span asp-validation-for="Id" class="text-danger"></span>
        <input type="submit" value="Create" class="btn btn-primary" />
    </form>
</div>